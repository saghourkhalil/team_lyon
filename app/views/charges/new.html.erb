<div class="charge_wrapper">

  <h3>Paiement</h3><br>
   <div class="charge_inside">
      <ul class="summary-table">
          <li><span>Total articles:</span> <span>$<%= current_user.cart.total_price %></span></li><br>
          <li><span>Livraison:</span> <span>Free</span></li><br>

              <%= form_tag charges_path do %>
                <article>
                  <% if flash[:error].present? %>
                    <div id="error_explanation">
                      <p><%= flash[:error] %></p>
                    </div>
                  <% end %>
                  <label class="amount">
                    <span class="charge_total">TOTAL: $<%= current_user.cart.total_price%></span>
                  </label>
                </article><br>

                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                        data-description="Payer votre commande"
                        data-amount="<%= @amount %>"
                        data-locale="auto"></script>
              <% end %>
</div>
</div>
